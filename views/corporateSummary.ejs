<!doctype html>
<html>
<head>
	<script src='/tunisiana/views/js/corporateSummary.js' type='text/javascript'></script>
</head>
<body>
	<div class="container-fluid">
		
		<div id="page" class="container-fluid panel-group" style="margin-top: 20px; margin-left: 5px;">
			<div class="panel-group">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h4 class="panel-title">
							<a role="button" data-toggle="collapse" href="#csfilter_collapse"><i class="fa fa-angle-double-down"></i>Filter</a>
						</h4>
					</div>
					<div id="csfilter_collapse" class="panel-collapse collapse">
						<div class="panel-body">
							<form class="form-inline">
								<div class="row" style="margin-left:0;">
									<div class="form-group col-md-4">
										<label for="name" class="col-sm-2 control-label">Day:</label>
										<div class="input-group input-group-sm col-sm-6 date" data-provide="datepicker" data-date-format="yyyy-mm-dd">
										    <input type="text" id="day" class="form-control datepicker " >
										    <div class="input-group-addon">
										        <span class="glyphicon glyphicon-th"></span>
										    </div>
										</div>
									</div>						

									<div class="form-group col-md-4"  style="white-space:nowrap">
										 <label for="corporateName" class="col-sm-4 control-label">Corporate Name:</label>
										 <div class="input-group col-sm-6">
											 <input type="text" class="form-control col-sm-10" id="corporateName">
										 </div>
									</div>
									
									<div class="form-group col-md-3">
										<input type="button" value="Go" class="btn btn-primary btn-sm" id="refresh">	
									</div>
								</div>
								<div class="row" style="margin-left: 0;">
									<div class="form-group col-md-4">
										<label for="start" class="col-sm-2 control-label">Start:</label>	
										<div class="input-group input-group-sm date col-sm-6" >
										    <input type="text" id="start" class="form-control datepicker" data-provide="datepicker">
											<div class="input-group-addon">
										        <span class="glyphicon glyphicon-th"></span>
										    </div>
										</div>
									</div>

									<div class="form-group  col-md-4">
										<label for="end" class="col-sm-4 control-label">End:</label>	
										<div class="input-group input-group-sm date col-sm-6" data-provide="datepicker">
										    <input type="text" id="end" class="form-control datepicker">
										    <div class="input-group-addon">
										        <span class="glyphicon glyphicon-th"></span>
										    </div>
										</div>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
				<div class="panel panel-default">
					<div class="panel-heading">
						<h4 class="panel-title">
							<a role="button" data-toggle="collapse" href="#cstable_collapse"><i class="fa fa-angle-double-down"></i>
							Corporate Summary Report</a>
						</h4>
						<ul class="list-inline panel-actions">
							<li>
								<a href="#" id="panel-fullscreen" data-table="corporateSummary-datatable" role="button" title="Toggle fullscreen" onclick="panleFull(this)"><i class="glyphicon glyphicon-resize-full"></i></a>
							</li>
						</ul>
					</div>
					<div id="cstable_collapse" class="panel-collapse collapse in">
						<div class="panel-body">
									<table class="table table-striped cell-border" width="100%"
										id="corporateSummary-datatable">
										<thead>
											<tr>
												<th>Corporate ID</th>
												<th>Corporate Name</th>
												<th>Detections</th>	
												<th>Insert Date</th>
											</tr>
										</thead>
									</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
</html>
