<!doctype html>
<html>
<head>

	<script src='/test/views/js/gk3global.js' type='text/javascript'></script>
<script src='/test/views/js/hourlyFraud.js' type='text/javascript'></script>
	<script src="/test/views/js/map.js"></script>

</head>
<body>
	<div class="container-fluid">

		<div id="page" class="container-fluid panel-group"
			style="margin-top: 20px;">
			<div class="panel-group">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h4 class="panel-title">
							<a role="button" data-toggle="collapse" href="#hffilter_collapse"><i
								class="fa fa-angle-double-down"></i>Filter</a>
						</h4>
					</div>
					<div id="hffilter_collapse" class="panel-collapse collapse">
						<div class="panel-body">
							<div class="row" style="margin-left: 0;">
								<div class="form-group col-md-3">
									<label for="start" class="col-sm-3">Start: </label>
									<div class="input-group input-group-sm date form_datetime col-sm-9">
										 <input id="start" class="form-control" type="text" value="">
										 <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
									</div>
								</div>
								<div class="form-group col-md-3">
									<label for="end" class="col-sm-3">End: </label>
									<div class="input-group input-group-sm date form_datetime col-sm-9">
										<input id="end" class="form-control" type="text" value="">
										<span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
									</div>
								</div>
								<div class="form-group col-md-3">
									<input type="button" class="btn btn-primary btn-sm"
										id="refresh" value="GO">
								</div>
								<div class="form-group col-md-3">
									<button class="btn btn-primary btn-sm" id="advanced"
										onclick="displayDiv()" >Advanced</button>
									<input type="hidden" id="reportType" value="hf_div" />
								</div>
							</div>
							<% var report = 'hf' %>
							<% include filterParam %>
						</div>
					</div>
				</div>

				<div class="panel panel-default">
					<div class="panel-heading">
						<h4 class="panel-title">
							<a role="button" data-toggle="collapse" href="#hfgraph_collapse"><i
								class="fa fa-angle-double-down"></i>Graphs</a>
						</h4>
					</div>
					<div id="hfgraph_collapse" class="panel-collapse collapse in">
						<div class="panel-body">
							<div class="row" style="margin-left: 0;">
								<div class="col-sm-6 col-md-4">								
										<div class="caption">
											<strong>Top 10 Suspect Duration By Cell Id</strong>
										</div>
									<div class="thumbnail zoom" id="sumOutDurationByCell-chart">
									</div>
								</div>
								<div class="col-sm-6 col-md-4">
										<div class="caption">
											<strong>Cell Info</strong>
										</div>
									<div class="thumbnail zoom" >
										<input type="text" id="mapId" value="<%=mapId%>"  hidden>
										<div id="<%=mapId%>" style="width: 100%; height: 225px"></div>
									</div>
								</div>
								<div class="col-md-4">
										<div class="caption">
											<strong>Suspects By Hour</strong>
										</div>								
									<div class="thumbnail zoom" id="hourly-row-chart">
									</div>
								</div>
							</div>
							<div class="row" style="margin-left: 0;">
								<div class="col-sm-6 col-md-4">
										<div class="caption">
											<strong>Top 10 Suspect Calls Out By Cell Id</strong>
										</div>								
									<div class="thumbnail zoom" id="callsOutByCellId-chart">
									</div>
								</div>
								<div class="col-sm-6 col-md-4">
										<div class="caption">
											<strong>Illegal Odds By Hour</strong>
										</div>								
									<div class="thumbnail zoom" id="illegalOddsTotal-chart">
									</div>
								</div>
								<div class="col-sm-6 col-md-4">
										<div class="caption">
											<strong>Suspects By Hour</strong>
										</div>								
									<div class="thumbnail zoom" id="hourly-pie-chart">

									</div>
								</div>
							</div>
						</div>
					</div>
				</div>

				<div class="panel panel-default">
					<div class="panel-heading">
						<h4 class="panel-title">
							<a role="button" data-toggle="collapse" href="#hftable_collapse"><i
								class="fa fa-angle-double-down"></i>Hourly Fraud Report</a>
						</h4>
						<ul class="list-inline panel-actions">
							<li><a href="#" id="panel-fullscreen" data-table="hourlyFraud-datatable" role="button"
								title="Toggle fullscreen" onclick="panleFull(this)"> <i
									class="glyphicon glyphicon-resize-full"></i>
							</a></li>
						</ul>
					</div>
					<div id="hftable_collapse" class="panel-collapse collapse in">
						<div class="panel-body">
							<table class="table table-striped cell-border" style="width: 100%;"
								id="hourlyFraud-datatable">
								<thead>
									<tr>
										<th>Traffic Date</th>
										<th>Traffic Hour</th>
										<th>MSISDN</th>
										<th>IMSI</th>
										<th>Cell ID</th>
										<th>LAC</th>
										<th>IMEI</th>
										<th>Vendor</th>
										<th>Model</th>
										<th>Illegal Odds</th>
										<th>Illegal Odds Ad</th>
										<th>Illegal Odds7 Ad</th>
										<th>Calls Out</th>
										<th>B Count</th>
										<th>Num Out Adjuested</th>
										<th>B Ratio</th>
										<th>Num Out Adjuested Ratio </th>
										<th>Avg Dur</th>
										<th>Off Peak</th>
										<th>Bursting</th>
										<th>Cells</th>

										<th>Calls In</th>
										<th>SMS Out</th>
										<th>SMS Out IG</th>
										<th>SMS In</th>
										<th>Audit</th>
										<th>Seconds</th>
										<th>Units</th>
										<th>Possible Loss</th>
										<th>In Seconds</th>
										<th>In Units</th>
										<th>Avg In Units</th>
										<th>Identified Date</th>
										<th>Trunk In</th>
										<th>Trunk Out</th>

										<th>Domestic Out</th>
										<th>International Out</th>
									</tr>
								</thead>
							</table>
						</div>
					</div>
				</div>
				<!-- Button trigger modal -->
			</div>
		</div>
	</div>
</body>
</html>
