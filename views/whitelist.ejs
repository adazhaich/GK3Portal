<!DOCTYPE HTML>
<html>
<head>
<script src='/tunisiana/views/js/whitelist.js' type='text/javascript'></script>

</head>
<body>
	<div class="container-fluid">
		<div id="page" class="container-fluid panel-group" style="margin-top: 20px; margin-left: 5px;">
			<div class="panel-group">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h4 class="panel-title">
							<a role="button" data-toggle="collapse" href="#wlfilter_collapse"><i class="fa fa-angle-double-down"></i>Filter</a>
						</h4>
					</div>

					<div id="wlfilter_collapse" class="panel-collapse collapse in">
						<div class="panel-body">
							<div class="row" style="margin-left:0;">
								<div class="form-group col-md-1">
									<label class="label-control control-label">MSISDN:</label>
								</div>
								
								<div class="form-group col-md-2">
									<input id="querymsisdn" class="form-control" pattern="[^']">
								</div>
								<div class="form-group col-md-1">
									<button class="btn btn-primary" id="query" >Query</button>
								</div>
								<div class="form-group col-md-1">
									<button class="btn btn-primary" id="delete" >Delete</button>
								</div>
							</div>
						</div>
					</div>
				</div>
				
				<div class="panel panel-default">
					<div class="panel-heading">
						<h4 class="panel-title">
							<a role="button" data-toggle="collapse" href="#wltable_collapse"><i class="fa fa-angle-double-down"></i>Whitelist Report</a>
						</h4>
						<ul class="list-inline panel-actions">
							<li>
								<a href="#" data-table="wl-datatable" id="panel-fullscreen" role="button" title="Toggle fullscreen" onclick="panleFull(this)"><i class="glyphicon glyphicon-resize-full"></i></a>
							</li>
						</ul>
					</div>
					<div id="wltable_collapse" class="panel-collapse collapse in">
						<div class="panel-body">
							<table class="table table-striped cell-border" style="width:100%;" id="wl-datatable">
								<thead>
								<tr style="background-color: lightseagreen;">
										<th></th>
										<th>ID</th>
										<th>MSISDN</th>
										<th>IMSI</th>
										<th>IMEI</th>
										<th>Create Time</th>
										<th>Update Time</th>
										<th>Description</th>
										<th>Type</th>
										<th>Creator</th>
									</tr>
								</thead>
							</table>
						</div>
					</div>
				</div>
				<div class="panel panel-default">
					<form id="addform" class="form-inline" method="post" style="height:60px">
						<h3>Add a new Record</h3>
					  <div class="form-group">
					    <label for="msisdn">MSISDN</label>
					    <input type="text" class="form-control" id="msisdn" >
					  </div>
					  <div class="form-group">
					    <label for="imsi">IMSI</label>
					    <input type="text" class="form-control" id="imsi" >
					  </div>
					  <div class="form-group">
					    <label for="imei">IMEI</label>
					    <input type="text" class="form-control" id="imei" >
					  </div>
					  <div class="form-group">
					    <label for="description">Description</label>
					    <input type="text" class="form-control" id="desc" >
					  </div>
					  <div class="form-group">
					    <label for="range">Range</label>
					    <input type="checkbox" class="form-control" id="range" >
					  </div>
					  <button type="button" class="btn btn-primary btn-xs" id="save">Save</button>
					</form>
				</div>
				<div class="panel panel-default">
					<form class="form-inline" role="form" id="importform" style="height:60px">
						<h3>Import</h3>
					   <div class="form-group">
					      <label for="inputfile">CSV File:<font color="red">*</font></label>
					      <input type="file" class="form-control btn-xs" id="inputfile">
					   </div>
					   <div id="disp_tmp_path" style="display:none"></div>
					   <button type="button" class="btn btn-default btn-xs" id="upload">Upload</button>
					</form>
				</div>
			</div>
		</div>
		<footer><% include ./partials/footer %> </footer>
	</div>
</body>
</html>