<!DOCTYPE html>
<html lang="en">
<head>
	<% include ./partials/loginHead%>
	<script src='/test/views/js/login.js' type='text/javascript'></script>
    <script src='/test/views/js/gk3global.js' type='text/javascript'></script>
</head>

<body>
	<div class="container">
		<header> <% include ./partials/loginHeader %> </header>
		<div class="col-sm-6 col-sm-offset-3">
			<main>
			<h1>
				<span class="fa fa-sign-in"></span> Login
			</h1>
			<br>
			<% if (message.length > 0) { %>
			<div class="alert alert-danger"><%= message %></div>
			<% } %> <!-- LOGIN FORM -->
			<br>

			<form action=''  method="post">
		<!-- <form action='/test/login' method="post"> -->
				<div class="form-group">
					<label class="col-sm-3">User Name:</label> 
					<input type="text" class="input-group input-group-sm  col-sm-5" name="username">
				</div>
				<br>
				<div class="form-group">
					<label  class="col-sm-3">Password:</label> 
					<input type="password" class="input-group input-group-sm  col-sm-5" name="password">
				</div>
				<br>
				<div class="form-group">
					<button type="submit" class="btn btn-warning btn-lrg col-sm-2 center-block">Login</button>
				</div>
			</form>
			<hr>
<!--			<p>&lt;!&ndash;Or go <a href="/test">home</a>.&ndash;&gt;
				Or <a href="" id="homeLink"><strong>click here </strong></a> to go Home.
			</p>-->
			</main>
			<footer> <% include ./partials/footer %> </footer>
		</div>

	</div>
</body>
</html>



