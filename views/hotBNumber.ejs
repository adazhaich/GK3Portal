<!DOCTYPE HTML>
<html>
<head>
	<script src='/tunisiana/views/js/gk3global.js' type='text/javascript'></script>
<script src='/tunisiana/views/js/hotBNumber.js' type='text/javascript'></script>

</head>
<body>
	<div class="container-fluid">
		<div id="page" class="container-fluid panel-group" style="margin-top: 20px; margin-left: 5px;">
			<div class="panel-group">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h4 class="panel-title">
							<a role="button" data-toggle="collapse" href="#hbnfilter_collapse"><i class="fa fa-angle-double-down"></i>Filter</a>
						</h4>
					</div>

					<div id="hbnfilter_collapse" class="panel-collapse collapse in">
						<div class="panel-body">
								<div class="row" style="margin-left:0;">
									<div class="form-group col-md-3">
										<label for="start" class="col-sm-2">Start: </label> 
										<div class="input-group input-group-sm col-sm-6 date" data-provide="datepicker" data-date-format="yyyy-mm-dd">
										    <input type="text" id="start" class="form-control datepicker " >
										    <div class="input-group-addon">
										        <span class="glyphicon glyphicon-th"></span>
										    </div>
										</div>
									</div>
									<div class="form-group col-md-3">
										<label for="end" class="col-sm-4"> End: </label>
										<div class="input-group input-group-sm col-sm-6 date" data-provide="datepicker" data-date-format="yyyy-mm-dd">
										    <input type="text" id="end" class="form-control datepicker " >
										    <div class="input-group-addon">
										        <span class="glyphicon glyphicon-th"></span>
										    </div>
										</div>
									</div>
									<div class="form-group col-md-3">
										<input type="button" class="btn btn-primary btn-sm" id="refresh" value="GO">
									</div>
									
									<div class="form-group col-md-3">
										<button class="btn btn-primary btn-sm" id="advanced" onclick="displayDiv()">Advanced</button>
										<input type="hidden" id="reportType" value="hbn_div" />
									</div>
								</div>
								<% var report = 'hbn' %>
								<% include filterParam %>
						</div>
					</div>


				</div>
				
				<div class="panel panel-default">
					<div class="panel-heading">
						<h4 class="panel-title">
							<a role="button" data-toggle="collapse" href="#hbntable_collapse"><i class="fa fa-angle-double-down"></i>Hot BNumber Report</a>
						</h4>
						<ul class="list-inline panel-actions">
							<li>
								<a href="#" id="panel-fullscreen" data-table="hotbnumber-datatable" role="button" title="Toggle fullscreen" onclick="panleFull(this)"><i class="glyphicon glyphicon-resize-full"></i></a>
							</li>
						</ul>
					</div>
					<div id="hbntable_collapse" class="panel-collapse collapse in">
						<div class="panel-body">
									<table class="table table-striped cell-border" style="width:100%;"
										id="hotbnumber-datatable">
										<thead>
											<tr>
												<th>Call Date</th>
<!-- 												<th>Call ID</th> removed per discussion with Shashank etc
 -->
 												<th>A-MSISDN</th>	
												<th>B-MSISDN</th>
												<th>Call Time</th>									
												<th>Duration</th>
												<th>Cell ID</th>
												<th>LAC</th>
												<th>IMEI</th>
												<th>Source</th>
												<th>Insert Time</th>
												<th>Update Time</th>
											</tr>
										</thead>
									</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
</html>
