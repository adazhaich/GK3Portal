<!doctype html>
<html>
<head><% include ./partials/head %>
	<script src='/test/views/js/signup.js' type='text/javascript'></script>
</head>

<body class="container">
	
	<div>
		<img src="/test/views/images/logo.png"></img>
	</div>

	<div class="col-sm-6 col-sm-offset-3">
		<h1>
			<i class="fa fa-user"></i> &nbsp;Add User
		</h1>

		<% if (message.length > 0) { %>
		<div class="alert alert-danger"><%= message %></div>
		<% } %>

		<form action='' method="post" style="margin:50px 0px;">
			<div class="form-group">
				<label class="col-sm-3">User Name:</label>
				<input type="text" class="input-group input-group-sm  col-sm-5" name="username">
			</div>
			<br>
			<div class="form-group">
				<label class="col-sm-3">Password:</label> 
				<input type="password" class="input-group input-group-sm  col-sm-5" name="password">
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-warning btn-md settings">Signup</button>
			</div>
		</form>
		<hr>
		<p>
			Already have an account? <a href="/test/login"><strong>Login</strong></a>
		</p>
		<p>

			Or go <a href="" id="homeLink"><strong>HOME</strong></a>.
		</p>

		<footer> <% include ./partials/footer %> </footer>

	</div>
</body>
</html>
