<!DOCTYPE HTML>
<html>
<head>
	<script src='/tunisiana/views/js/shutdownCriteria.js' type='text/javascript'></script>

</head>
<body>
<div class="container-fluid">
	<div id="page" class="container-fluid panel-group" style="margin-top: 20px; margin-left: 5px;">
		<div class="panel-group">

			<div class="panel panel-default">
				<div class="panel-heading">
					<h4 class="panel-title">
						<a role="button" data-toggle="collapse" href="#sdctable_collapse"><i class="fa fa-angle-double-down"></i>Shutdown Criteria Report</a>
					</h4>
					<ul class="list-inline panel-actions">
						<li>
							<a href="#" id="panel-fullscreen" data-table="sdc-datatable" role="button" title="Toggle fullscreen"><i class="glyphicon glyphicon-resize-full"></i></a>
						</li>
					</ul>
				</div>
				<div id="sdctable_collapse" class="panel-collapse collapse in">
					<div class="panel-body">
						<div class="row" style="margin-left:0; margin-bottom:15px;">
							<div class="form-group col-md-1">
								<button class="btn btn-primary btn-sm" id="new">New</button>
							</div>
							<div class="form-group col-md-1">
								<button class="btn btn-primary btn-sm" id="alter" disabled>Alter</button>
							</div>
							<div class="form-group col-md-1">
								<button class="btn btn-primary btn-sm" id="delete" disabled>Delete</button>
							</div>
							<div class="form-group col-md-1">
								<button class="btn btn-primary btn-sm" id="showbtn" disabled>Show Report</button>
							</div>
							<div class="form-group col-md-1">
								<button class="btn btn-primary btn-sm" id="refresh" >Refresh</button>
							</div>
							<input type="hidden" name="reportname" id="reportname">
						</div>
						<table class="table table-striped cell-border" width="100%"
							   id="sdc-datatable">
							<thead>
							<tr>
								<th>Criteria No</th>
								<th>Criteria No</th>
								<th>Criteria Description</th>
								<th>Criteria Operation</th>
								<th>Criteria Value</th>
							</tr>
							</thead>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
</body>
</html>