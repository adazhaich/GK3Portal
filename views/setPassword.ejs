<!doctype html>
<html>
<head>
<script src='/test/views/js/setPassword.js' type='text/javascript'></script>
</head>

<body>
	<div class="container">
		<div class="col-sm-6 col-sm-offset-3">
				<h1>
					<i class="fa fa-lock"></i>&nbsp; Change Password
				</h1>
				<div id="msg" display="none"><p class="bg-danger" id="alertmsg"></p></div>
				<!-- Change Password FORM -->
				<br>
				<form method="post">
					<div class="form-group">
						<label class="col-sm-4">Old Password:</label> 
						<input type="password" class="input-group input-group-sm  col-sm-6" name="oldpassword" id="oldpassword" required>
					</div>
					<br>
					<div class="form-group">
						<label  class="col-sm-4">New Password:</label> 
						<input type="password" class="input-group input-group-sm  col-sm-6" name="newpassword" id="newpassword" required>
					</div>
					<br>
					<div class="form-group">
						<label  class="col-sm-4">Confirm Password:</label> 
						<input type="password" class="input-group input-group-sm  col-sm-6" name="confirmpassword" id="confirmpassword" required>
					</div>
					<br>
					<div class="form-group">
						<button type="button" class="btn btn-warning btn-sm settings" id="save">Save</button>
						<button type="reset" class="btn btn-warning btn-sm settings">Cancel</button>
					</div>
				</form>
				<hr>
		</div>

	</div>
</body>
</html>